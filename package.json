{
  "name": "git-spect-server",
  "version": "1.0.0",
  "description": "Git commit tracker application",
  "scripts": {
    "cli:dev": "ts-node src/cli/index.ts",
    "cli:staging": "node dist/cli/index.js",
    "cli:production": "node dist/cli/index.js",
    "clean": "rm -rf dist",
    "build": "tsc",
    "build:clean": "yarn clean; tsc",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "node prisma-migrate.js",
    "prisma:migrate-dev": "dotenv -e .env.development -- prisma migrate dev",
    "prisma:migrate-staging": "dotenv -e .env.staging -- prisma migrate deploy",
    "prisma:migrate-production": "dotenv -e .env.production -- prisma migrate deploy",
    "start": "node dist/server.js",
    "dev": "nodemon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": ">=20.13.0",
    "yarn": ">=1.17.0"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-winston": "^4.2.0",
    "nanoid": "^5.1.5",
    "prisma": "^6.10.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-elasticsearch": "^0.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
