{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "./node_modules/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}